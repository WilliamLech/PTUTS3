<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileRegister"
    android:background="@color/fond">


    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="132dp"
        app:srcCompat="@drawable/fleur" />

    <TextView
        android:id="@+id/pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilepic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/bold"
        android:text="Pseudo"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/explication"
        android:layout_width="235dp"
        android:layout_height="29dp"
        android:layout_below="@+id/pseudo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/bold"
        android:text="Veuillez remplir les champs ci-dessous pour vous inscrire"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="265dp"
        android:layout_height="54dp"
        android:layout_below="@+id/explication"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/custom_email_bg"
        android:ems="10"
        android:hint="Age"
        android:inputType="date"
        android:paddingLeft="20dp"
        android:textColor="#FFA929"
        android:textColorHint="#FFA929" />

    <ListView
        android:id="@+id/liste"
        android:layout_width="233dp"
        android:layout_height="95dp"
        android:layout_below="@+id/age"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@color/white"
        android:listSelector="@color/lightorange"/>

    <Button
        android:id="@+id/valider"
        android:layout_width="205dp"
        android:layout_height="72dp"
        android:layout_below="@+id/liste"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/signinbutton"
        android:fontFamily="@font/bold"
        android:text="CHECK"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
</RelativeLayout>